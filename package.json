{
	"name": "pokedex",
	"version": "0.1.0",
	"private": true,
	"packageManager": "pnpm@10.20.0",
	"engines": {
		"node": ">=24.11.0"
	},
	"scripts": {
		"dev": "next dev --turbo",
		"build": "next build",
		"clean": "next clean",
		"start": "next start",
		"lint": "eslint --max-warnings=0 --ext .js,.jsx,.ts,.tsx .",
		"lint:fix": "eslint --fix --max-warnings=0 --ext .js,.jsx,.ts,.tsx .",
		"clean:all": "pnpm run clean && rm -rf node_modules .turbo .next dist",
		"refresh": " pnpm  clean:all pnpm install && pnpm dev",
		"format:check": "prettier --check .",
		"format": "prettier --write .",
		"check": "pnpm run lint && pnpm run format:check && pnpm run type-check && pnpm run test",
		"type-check": "tsc --noEmit",
		"type-check:watch": "tsc --noEmit --watch",
		"fix:all": "pnpm run lint:fix && pnpm run format",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:e2e": "playwright test",
		"test:all": "pnpm run test && pnpm run test:e2e",
		"prepare": "husky"
	},
	"dependencies": {
		"@radix-ui/react-aspect-ratio": "^1.1.7",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-dropdown-menu": "^2.1.16",
		"@radix-ui/react-label": "^2.1.7",
		"@radix-ui/react-progress": "^1.1.7",
		"@radix-ui/react-select": "^2.2.6",
		"@radix-ui/react-separator": "^1.1.7",
		"@tabler/icons-react": "^3.35.0",
		"@tanstack/react-query": "^5.90.5",
		"@tanstack/react-query-devtools": "^5.90.2",
		"@types/node": "24.9.2",
		"@types/react": "19.2.2",
		"@types/react-dom": "19.2.2",
		"add": "^2.0.6",
		"autoprefixer": "10.4.21",
		"axios": "^1.13.1",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"cmdk": "^1.1.1",
		"dropdown-menu": "^0.1.1",
		"eslint-config-next": "16.0.1",
		"framer-motion": "^12.23.24",
		"fuse.js": "^6.6.2",
		"gsap": "^3.13.0",
		"lucide-react": "^0.548.0",
		"next": "16.0.1",
		"next-themes": "^0.4.6",
		"postcss": "8.5.6",
		"react": "19.2.0",
		"react-dom": "19.2.0",
		"react-select": "^5.10.2",
		"tailwind-merge": "^3.3.1",
		"tailwindcss": "4.1.16",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "5.9.3",
		"zustand": "^5.0.8"
	},
	"devDependencies": {
		"@playwright/test": "^1.56.1",
		"@tailwindcss/postcss": "^4.1.16",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@typescript-eslint/eslint-plugin": "^8.46.2",
		"@typescript-eslint/parser": "^8.46.2",
		"@vitest/coverage-v8": "^4.0.6",
		"@eslint/eslintrc": "^3.3.1",
		"eslint": "9.38.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"globals": "^16.4.0",
		"jsdom": "^27.1.0",
		"husky": "^9.1.7",
		"prettier": "^3.6.2",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"vitest": "^4.0.6"
	}
}
